//note: libgdx json differs from regular since it does not use identifiers (therefore lots of errors shown in IDE)
// contains skin for table widgets for calculator
{
  com.badlogic.gdx.graphics.g2d.BitmapFont: {
    light-font: { file: fonts/opensans_light_med.fnt },
    default-font: { file: fonts/opensans_bold_med.fnt }
  },
  com.badlogic.gdx.graphics.Color: {
    green: { a: 1, b: 0, g: 1, r: 0 },
    white: { a: 1, b: 1, g: 1, r: 1 },
    red: { a: 1, b: 0, g: 0, r: 1 },
    black: { a: 1, b: 0, g: 0, r: 0 },
    blue : { a: .8, b: 1, g: 0, r : 0} //for textfield messageFontColor
  },
  com.badlogic.gdx.scenes.scene2d.ui.Button$ButtonStyle: {
    default: { up: back-up, down: back-down},
    delete: {up: deleteButton, down: deleteButton}
  },
  com.badlogic.gdx.scenes.scene2d.ui.TextButton$TextButtonStyle: {
    default: {down: menuButtonDown, up: menuButtonUp, font: default-font, fontColor: black},
    flavor: { down: flavButtonDown, up: flavButtonUp, font: default-font, fontColor: black },
    menu: { down: menuButtonDown, up: menuButtonUp, font: default-font, fontColor: black }
  },
  com.badlogic.gdx.scenes.scene2d.ui.ScrollPane$ScrollPaneStyle: {
//background: default-rect, hScroll: default-scroll, hScrollKnob: default-round-large
    default: { vScroll: flavorVScroll, background: flavorBckgrnd, vScrollKnob: flavorVKnob}
  },
  com.badlogic.gdx.scenes.scene2d.ui.Label$LabelStyle: {
    default: { font: default-font, fontColor: black },
    goalLabel: {font: default-font, fontColor: black, background: goalTitleBkgrnd},
    baseLabel: {font: default-font, fontColor: black, background: baseTitleBkgrnd},
    flavorLabel: {font: default-font, fontColor: black, background: flavorBckgrnd},
    calcsLabel: {font: default-font, fontColor: black, background: calcsBckgrnd},
    supplyLabel: {font: default-font, fontColor: red, background: calcsBckgrnd}
  },
  com.badlogic.gdx.scenes.scene2d.ui.TextField$TextFieldStyle: {
    titleTextField: {selection: selectionName, background: titleBackground, font: default-font, fontColor: black, cursor: cursor,
      messageFont: light-font, messageFontColor: blue},
    numTextField: {selection: selectionNum, background: numFieldBckgrnd, font: default-font, fontColor: black, cursor: cursor,
      messageFont: light-font, messageFontColor: blue},
    nameTextField: { selection: selectionNum, background: numFieldBckgrnd, font: default-font, fontColor: black, cursor: cursor,
      messageFont: light-font, messageFontColor: blue}
  },
  com.badlogic.gdx.scenes.scene2d.ui.CheckBox$CheckBoxStyle: {
      default: { checkboxOn: check-on, checkboxOff: check-off, font: default-font, fontColor: black }
  },
  com.badlogic.gdx.scenes.scene2d.ui.Window$WindowStyle: {
    default: { titleFont: default-font, background: defaultDialog, titleFontColor: black},
    load: { titleFont: default-font, background: loadWindow, titleFontColor: black }
  },
  com.badlogic.gdx.scenes.scene2d.ui.Slider$SliderStyle: {
    default-horizontal: { background: slider, knob: sliderKnob } //need to put -horizontal or -vertical identifier
  },
  com.badlogic.gdx.scenes.scene2d.ui.SelectBox$SelectBoxStyle: {
    default: { font: default-font, fontColor: black, background: selectBox-back, scrollStyle: default,
      listStyle: { font: default-font, selection: selectBox-selection}}
  }
  com.badlogic.gdx.scenes.scene2d.ui.List$ListStyle: {
    default: { fontColorUnselected: blue, selection: selectBox-selection, fontColorSelected: black, font: default-font }
  }
  
